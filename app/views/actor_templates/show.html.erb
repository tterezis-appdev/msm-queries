</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://image.tmdb.org/t/p/w500/hsCu1JUzQQ4pl7uFxAVFLOs9yHh.jpg" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
       <%=time_ago_in_words(@the_actor.created_at)%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.updated_at)%>
  </dd>
</dl>
